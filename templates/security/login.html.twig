{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        {% if error %}
            <div class="alert alert-danger" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form action="{{ url('app_loginlogout_login') }}" method="post">
            <div class="form-group">
                <label for="username">{{ 'username'|trans }}:</label>
                <input type="text" class="form-control" id="username" name="username" placeholder="{{ 'username'|trans }}..." value="{{ last_username }}"/>
            </div>
            <div class="form-group">
                <label for="password">{{ 'password'|trans }}</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="{{ 'password'|trans }}...">
            </div>
            <input type="hidden" name="_target_path" value="/"/>
            <button type="submit" class="btn btn-sm btn-success">{{ 'btn_login'|trans }}</button>
        </form>
    </div>
{% endblock %}